<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:background="@drawable/bg_dialog"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/relative_layout_item_imge"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_margin="13dp"
                        android:textSize="16dp"
                        android:id="@+id/text_view_image_item_title"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"
                        android:text="Water Wallpaper"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />
                    <RelativeLayout
                        android:layout_centerVertical="true"
                        android:gravity="center|right"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp">
                        <ImageView
                            android:tint="@color/primary_text"
                            app:srcCompat="@drawable/ic_share_app"
                            android:layout_width="15dp"
                            android:layout_height="50dp" />
                        <TextView
                            android:textSize="13dp"
                            android:id="@+id/text_view_downloads"
                            android:gravity="center"
                            android:textColor="@color/primary_text"
                            android:text="2K Views"
                            android:layout_marginLeft="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp" />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:background="@drawable/border_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:adjustViewBounds="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_transparant"
                        android:id="@+id/image_view_image_item_image"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_height="220dp" />
                    <RelativeLayout
                        android:elevation="4dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/relative_layout_item_image_review"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:background="@drawable/border_views"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:tint="@color/white"
                            app:srcCompat="@drawable/ic_access_time"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:text="@string/on_review"
                            android:layout_marginLeft="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp" />
                    </RelativeLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relative_layout_dialog_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="12dp"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/circle_image_view_image_item_user"
                            android:src="@drawable/profile"
                            android:layout_width="24dp"
                            android:layout_height="25dp" />
                        <TextView
                            android:layout_marginLeft="4dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textStyle="bold"
                            android:textSize="13dp"
                            android:textColor="@color/primary_text"
                            android:id="@+id/text_view_image_item_name_user"
                            android:text="user name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>